{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": true,
    "declarationDir": "./declarations/generated",
    "experimentalDecorators": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext", "webworker"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es6"
  },
  "exclude": ["dist", "node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}
